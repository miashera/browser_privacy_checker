{
  "manifest_version": 3,
  "name": "Browser Privacy Checker",
  "version": "1.0.0",
  "description": "Analyze and customize browser privacy settings with recommendations and reports",
  "permissions": [
    "privacy",
    "cookies",
    "storage",
    "tabs",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  }
}